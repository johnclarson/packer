  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami_filter": {
      "filters": {
      "virtualization-type": "hvm",
      "name": "CentOS Linux 7 x86_64 HVM EBS 1708_11.01-b7ee8a69-ee97-4a49-9e68-afaee216db2e-ami-95096eef.4",
      "root-device-type": "ebs"
      },
      "owners": ["679593333241"],
      "most_recent": true
    },
    "instance_type": "t2.large",
    "ssh_username": "centos",
    "ami_name": "dae-foreman-1.16-c2s-centos-7 {{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline":[
         "sudo /bin/yum -y install epel-release",
         "sudo /bin/yum -y install https://yum.puppetlabs.com/puppet5/puppet5-release-el-7.noarch.rpm",
         "sudo /bin/yum -y install https://yum.theforeman.org/releases/1.16/el7/x86_64/foreman-release.rpm",
         "sudo /bin/yum-config-manager --enable epel",
         "sudo /bin/yum -y install foreman-installer",
         "sudo /bin/yum -y install foreman-ec2",
         "sudo foreman-installer",
         "sudo sed -i 's/aws_access_key_id => user, :aws_secret_access_key => password/use_iam_profile => true/g' /usr/share/foreman/app/models/compute_resources/foreman/model/ec2.rb",
         "sudo sed -i 's/validates/#validates/g' /usr/share/foreman/app/models/compute_resources/foreman/model/ec2.rb",
         "sudo sed -i -e 's/amazonaws.com/c2s.ic.gov/g' /opt/theforeman/tfm/root/usr/share/gems/gems/fog-aws*/lib/fog/aws/compute.rb",
         "sudo sed -i -e 's/amazonaws.com/us-iso-east-1.c2s.ic.gov/g' /opt/theforeman/tfm/root/usr/share/gems/gems/fog-aws*/lib/fog/aws/iam.rb",
         "sudo sed -i -e 's/^.*@regions.*/      @regions ||= [\"us-iso-east-1\"]/g' /opt/theforeman/tfm/root/usr/share/gems/gems/fog-aws*/lib/fog/aws.rb",
         "sudo sed -i -e 's/ssl_context = OpenSSL::SSL::SSLContext.new/ssl_context = OpenSSL::SSL::SSLContext.new\\n      params[:ssl_verify_peer] = false/g'  /opt/theforeman/tfm/root/usr/share/gems/gems/excon-*/lib/excon/ssl_socket.rb",
         "echo '#!/bin/bash' | sudo tee --append /usr/sbin/foreman-fix",
         "echo 'HOSTNAME=`hostname`' | sudo tee --append /usr/sbin/foreman-fix",
         "echo 'check=`grep $HOSTNAME /etc/httpd/conf/httpd.conf`' | sudo tee --append /usr/sbin/foreman-fix",
         "echo 'if [ ! $check ]; then' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  OLDHOSTNAME=`grep \"server =\" /etc/puppetlabs/puppet/puppet.conf | cut -d\" \" -f7`' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  service httpd stop' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  service foreman-proxy stop' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  service puppetserver stop' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  /opt/puppetlabs/bin/puppet cert -c $OLDHOSTNAME' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  /opt/puppetlabs/bin/puppet cert -g $HOSTNAME --dns_alt_names=$HOSTNAME,puppet' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  sed -i \"s/$OLDHOSTNAME/$HOSTNAME/g\" /etc/httpd/conf.d/*.conf' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  sed -i \"s/$OLDHOSTNAME/$HOSTNAME/g\" /etc/puppetlabs/puppet/puppet.conf' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  sed -i \"s/$OLDHOSTNAME/$HOSTNAME/g\" /etc/foreman-proxy/settings.yml' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  sed -i \"s/$OLDHOSTNAME/$HOSTNAME/g\" /etc/foreman-proxy/settings.d/*.yml' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  sed -i \"s/$OLDHOSTNAME/$HOSTNAME/g\" /etc/foreman/settings.yaml' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  sed -i \"s/$OLDHOSTNAME/$HOSTNAME/g\" /etc/puppetlabs/puppet/foreman.yaml' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  sed -i \"s/$OLDHOSTNAME/$HOSTNAME/g\" /etc/puppetlabs/puppetserver/conf.d/webserver.conf' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  sed -i \"s/$OLDHOSTNAME/$HOSTNAME/g\" /etc/hammer/cli.modules.d/foreman.yml' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  sed -i \"s/$OLDHOSTNAME/$HOSTNAME/g\" /etc/httpd/conf/httpd.conf' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  sed -i \"s/$OLDHOSTNAME/$HOSTNAME/g\" /etc/puppetlabs/puppetserver/conf.d/auth.conf' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  service puppetserver start' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  service httpd start' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  service foreman-proxy start' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  foreman-rake permissions:reset > /root/credentials' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  chmod 400 /root/credentials' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  PASSWORD=`cut -d\" \" -f6 /root/credentials`' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  hammer -u admin -p $PASSWORD host delete --name  $OLDHOSTNAME' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  hammer -u admin -p $PASSWORD proxy update --id 1 --new-name $HOSTNAME --url https://${HOSTNAME}:8443' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  hammer -u admin -p $PASSWORD compute-resource create --name=AWS --provider=EC2 --url=us-east-1' | sudo tee --append /usr/sbin/foreman-fix",
         "echo '  /opt/puppetlabs/bin/puppet agent -tv' | sudo tee --append /usr/sbin/foreman-fix",
         "echo 'fi' | sudo tee --append /usr/sbin/foreman-fix",
         "sudo chmod +x /usr/sbin/foreman-fix",
         "echo '[Unit]' | sudo tee --append /etc/systemd/system/foreman-fix.service",
         "echo 'Description=Foreman Fix Service' | sudo tee --append /etc/systemd/system/foreman-fix.service",
         "echo 'After=network.target httpd.service' | sudo tee --append /etc/systemd/system/foreman-fix.service",
         "echo ' ' | sudo tee --append /etc/systemd/system/foreman-fix.service",
         "echo '[Service]' | sudo tee --append /etc/systemd/system/foreman-fix.service",
         "echo 'Type=forking' | sudo tee --append /etc/systemd/system/foreman-fix.service",
         "echo 'TimeoutSec=5min' | sudo tee --append /etc/systemd/system/foreman-fix.service",
         "echo 'User=root' | sudo tee --append /etc/systemd/system/foreman-fix.service",
         "echo 'ExecStart=/usr/sbin/foreman-fix' | sudo tee --append /etc/systemd/system/foreman-fix.service",
         "echo 'Restart=on-abort' | sudo tee --append /etc/systemd/system/foreman-fix.service",
         "echo ' ' | sudo tee --append /etc/systemd/system/foreman-fix.service",
         "echo '[Install]' | sudo tee --append /etc/systemd/system/foreman-fix.service",
         "echo 'WantedBy=multi-user.target' | sudo tee --append /etc/systemd/system/foreman-fix.service",
         "sudo systemctl daemon-reload",
         "sudo systemctl enable foreman-fix"
      ]
  }]
}
