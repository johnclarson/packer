  "provisioners": [
    {
      "type": "shell",
      "inline":[
         "sudo /bin/yum -y install epel-release",
         "sudo /bin/yum -y install https://yum.puppetlabs.com/puppet5/puppet5-release-el-7.noarch.rpm",
